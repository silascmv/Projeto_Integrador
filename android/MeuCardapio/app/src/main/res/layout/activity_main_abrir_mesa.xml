<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityAbrirMesa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="32dp">

            <TextView

                android:id="@+id/Nome_App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alfa_slab_one"
                android:text="Meu CardÃ¡pio"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Nome_App"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="Bem-Vindo"
                android:textColor="#FFFFFF"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/usuarioLogado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Nome_App"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/usuarioId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Nome_App"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="7sp" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/robo" />


        </RelativeLayout>



    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relative_scan"
        android:layout_width="550dip"
        android:layout_height="300dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="visible"
        android:background="@drawable/bordaqrcode"/>

    <ImageView
        android:src="@drawable/flashligado"
        android:id="@+id/btnFlash"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_round"
        android:text="@string/iniciar_pedidos" />
    <ImageView
        android:src="@drawable/flashdesligado"
        android:id="@+id/btnFlashDesligado"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_round"
        android:text="@string/iniciar_pedidos"
        android:visibility="invisible"
        />


</RelativeLayout>